# Django Settings
SECRET_KEY=your-secret-key-here
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Environment Configuration
# Options: LOCAL, TESTING, PRODUCTION
# - LOCAL: Development environment, allows off-hours options scanning (bypasses market hours check)
# - TESTING: Test environment (set automatically by pytest)
# - PRODUCTION: Production environment, enforces market hours restrictions
ENVIRONMENT=LOCAL

# Database
DATABASE_URL=postgresql://app:app@localhost:65432/app

# Redis
REDIS_URL=redis://:myStrongPassword@localhost:36379/0

# Market Data API (for options scanning)
MD_API_KEY=your-market-data-api-key
MD_URL_BASE=https://api.marketdata.app/v1

# Alpha Vantage API (for fundamental data and technical analysis)
ALPHA_VANTAGE_API_KEY=your-alpha-vantage-api-key
